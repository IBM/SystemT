<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>src</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${basedir}/src/main/java</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>**/*.java</include>
        <include>**/*.properties</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/resources</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>**/*.*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../simple-regex/src/main/java</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>**/*.java</include>
        <include>**/*.properties</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../simple-regex/src/main/resources</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>**/*.*</include>
      </includes>
    </fileSet>
	<!-- JCC generated sources -->
    <fileSet>
      <directory>${basedir}/target/generated-sources/javacc</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>**/*.java</include>
        <include>**/*.properties</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/../simple-regex/target/generated-sources/javacc</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>**/*.java</include>
        <include>**/*.properties</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
